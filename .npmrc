# Use the official npm registry
registry=https://registry.npmjs.org/

# Enable workspace support
link-workspace-packages=true

# Hoist dependencies to the root node_modules when possible
hoist=true

# Save exact versions in package.json
save-exact=false

# Use strict peer dependencies
strict-peer-dependencies=true

# Auto install peer dependencies
auto-install-peers=true

# Prefer workspace packages over registry packages
prefer-workspace-packages=true
