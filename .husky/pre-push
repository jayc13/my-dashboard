#!/usr/bin/env sh
export HNVM_PNPM=10.17.1

# =============================================================================
# Load nvm and set Node.js version
# =============================================================================
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

nvm use 22.20.0

# =============================================================================
# Pre-push Hook
# =============================================================================
# This script runs before each push to ensure all tests pass.
# =============================================================================

echo "ğŸ§ª Running pre-push checks..."

cd "$(git rev-parse --show-toplevel)" || exit

echo "ğŸ”¬ Running tests..."

pnpm -r --filter '!./tests/e2e-tests' --filter '!./tests/integration-tests' --if-present run test

if [ $? -eq 0 ]; then
  echo "âœ… All tests passed!"
else
  echo "âŒ Tests failed! Please fix failing tests before pushing."
  exit 1
fi

echo "âœ… Pre-push checks completed successfully!"
