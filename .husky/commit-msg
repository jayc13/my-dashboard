#!/usr/bin/env sh

echo "üìù Validating commit message format..."
# Run commitlint to validate the commit message using the scripts workspace
cd scripts && npx commitlint --config="./commitlint.config.js" --edit "$1"

if [ $? -eq 0 ]; then
  echo "‚úÖ Commit message format is valid!"
else
  echo "‚ùå Commit message format is invalid!"
  echo ""
  echo "Please follow the conventional commit format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Examples:"
  echo "  feat: add user authentication"
  echo "  fix(client): resolve login button styling"
  echo "  docs: update API documentation"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  exit 1
fi
